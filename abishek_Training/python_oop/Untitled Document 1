        print("acoount name of the transferer:" , name[From_acc])
        print("acoount name of the reciever:", name[To_acc])
        obj.trans_ammount= int(input('enter the ammount to be transfered :'))

    elif option == 4:
        acc = int(input("enter the account number :"))
        obj.veiw_bal(acc)

